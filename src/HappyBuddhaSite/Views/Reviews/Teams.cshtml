            $("#ionrange_effort").ionRangeSlider({
                values: [
                    "poor", "well below", "below avg",
                    "average", "above avg", "well above",
                    "excellent"
                ],
                step: 1,
                gridnum: 1,
                hasGrid: true
            });

            $("#ionrange_quality").ionRangeSlider({
                values: [
                    "far below", "below avg",
                    "average", "above avg", "exceeds"
                ],
                min: 1,
                max: 5,
                type: 'single',
                step: 1,
                hasGrid: true
            });

            $("#ionrange_assists").ionRangeSlider({
                values: [
                  "none", "far below", "some",
                    "some more", "a lot", "huge"
                ],
                min: 0,
                max: 5,
                type: 'single',
                step: 1,
                hasGrid: true
            });

            $("#ionrange_misses").ionRangeSlider({
                values: [
                    "none", "far below", "some",
                    "some more", "a lot", "huge"
                ],
                min: 0,
                max: 5,
                type: 'single',
                step: 1,
                hasGrid: true
            });

            $("#ionrange_innovation").ionRangeSlider({
                values: [
                    "none", "far below", "some",
                    "some more", "a lot", "huge"
                ],
                min: 0,
                max: 5,
                type: 'single',
                step: 1,
                hasGrid: true
            });
        }

   // $(function () {

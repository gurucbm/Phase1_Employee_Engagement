@{ 
  //  Layout = "~/Views/Shared/_LayoutNoNav.cshtml";

    var id = 0;
    int.TryParse(ViewData["id"].ToString(), out id);
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-sm-10">
            <div class="ibox-content">
                <div class="ibox-title">
                    <h5>
                        Review for @{ViewData["id"].ToString();}
                    </h5>
                </div>

                <form class="form-horizontal">
                     <div class="form-group">
                        <label class="col-sm-3 control-label">Effort</label>
                        <div class="col-sm-6">
                            <input type="text" id="ionrange_effort" name="ionrange_effort" value="@id" data-step="1"
                                   data-min="0" data-max="6" data-type="single" data-grid-num="0" />
                        </div>
                    </div>
                    <!--  data-grid="true"   -->
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Quality</label>
                        <div class="col-sm-6">
                            <input type="text" id="ionrange_quality" name="ionrange_quality" value="@id" />
                        </div>
                    </div>

                    <div class="hr-line-dashed"></div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label">Assists</label>
                        <div class="col-sm-6">
                            <input type="text" id="ionrange_assists" name="ionrange_assists" value="@id}" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label">Misses</label>
                        <div class="col-sm-6">
                            <input type="text" id="ionrange_misses" name="ionrange_misses" value="@id" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label">Innovation</label>
                        <div class="col-sm-6">
                            <input type="text" id="ionrange_innovation" name="ionrange_innovation" value="@id" />
                        </div>
                    </div>

                    <div class="hr-line-dashed"></div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label">Notes</label>
                        <div class="col-sm-6">
                            <textarea class="form-control" rows="5" id="comment"></textarea>
                        </div>
                    </div>

                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-sm-8 center">
                            <button class="btn btn-primary btn-success" type="submit">Update</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-lg-2">

    </div>
</div>
</div>



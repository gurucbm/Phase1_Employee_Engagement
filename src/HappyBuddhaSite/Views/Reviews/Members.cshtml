
@section ExtraTabs
{
	<li class="active"><a href="@Url.Action("Members", "Reviews")">Self Review</a></li>
}

<div class="row">
	<div class="col-md-12">

		<form class="form-horizontal">
			<div class="form-group">
				<label class="col-sm-2 control-label">Self</label>
				<div class="col-sm-6">
					<input type="text" data-bind="slider: { type: 'single', from: 3, values: ['poor', 'well below', 'below avg', 'average', 'above avg', 'well above', 'excellent']}" />
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-2 control-label">Assignment</label>
				<div class="col-sm-6">
					<input type="text" data-bind="slider: { type: 'single', from: 3, values: ['poor', 'well below', 'below avg', 'average', 'above avg', 'well above', 'excellent']}" />
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-2 control-label">Team</label>
				<div class="col-sm-6">
					<input type="text" data-bind="slider: { type: 'single', from: 3, values: ['poor', 'well below', 'below avg', 'average', 'above avg', 'well above', 'excellent']}" />
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-2 control-label">Company</label>
				<div class="col-sm-6">
					<input type="text" data-bind="slider: { type: 'single', from: 3, values: ['poor', 'well below', 'below avg', 'average', 'above avg', 'well above', 'excellent']}" />
				</div>
			</div>


			<div class="hr-line-dashed"></div>

			<div class="form-group">
				<label class="col-sm-2 control-label">Self Investment</label>
				<div class="col-sm-6">
					<input type="text" data-bind="slider: { type: 'single', from: 3, values: ['none', '>=2 hours', '>=4 hours','>=8 hours', '>=16 hours', '>=32 hours', '>=64 hours']}" />
				</div>
			</div>

			<div class="hr-line-dashed"></div>

			<div class="form-group">
				<label class="col-sm-2 control-label">Comments</label>
				<div class="col-sm-6">
					<textarea class="form-control" rows="5" id="comment"></textarea>
				</div>
			</div>

			<div class="hr-line-dashed"></div>

			<div class="form-group">
				<div class="col-lg-offset-6 col-sm-2 text-right">
					<button class="btn btn-primary btn-success btn-lg" type="submit">Update</button>
				</div>
			</div>
		</form>
	</div>
</div>
@model HappyBuddhaSite.ViewModels.LoginViewModel

@{
	this.ViewData["IsLoginPage"] = true;
}

@section StyleSheet
{
	<link rel="stylesheet" href="~/Framework/StyleSheet/style.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Framework/StyleSheet/style-responsive.css" asp-append-version="true" />

}

<div class="login-img-body">
	<div class="container">

		<form class="login-form" asp-action="Login" asp-controller="Account" method="post">
			<div class="login-wrap">
				<p class="login-img"><i class="icon_lock_alt"></i></p>
				<div class="input-group">
					<span class="input-group-addon"><i class="icon_profile"></i></span>
					<input asp-for="WindowsIdentity" type="text" class="form-control" placeholder="Username" autofocus />
				</div>
				<div class="input-group">
					<span class="input-group-addon"><i class="icon_key_alt"></i></span>
					<input asp-for="Password" type="password" class="form-control" placeholder="Password">
				</div>
				<div style="padding-left:35px;padding-right:15px;">
					<label class="checkbox">
						<input type="checkbox" value="remember-me"> Remember me
						<span class="pull-right"> <a href="#"> Forgot Password?</a></span>
					</label>
				</div>

				<div style="opacity:.95; margin-top:6px;" class="text-danger" asp-validation-summary="All"></div>
				<button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
				<a href='@Url.Action("Register", "Account")' style="color:#fff!important" class="btn btn-info btn-lg btn-block" >Signup</a>
			</div>
		</form>
	</div>
</div>

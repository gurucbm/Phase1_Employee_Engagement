@model HappyBuddhaSite.Core.Data.User

@inject HappyBuddhaSite.Core.Data.BuddhaDataContext BuddhaDataContext

@section ExtraTabs
{
	<li class="active"><a href="@Url.Action("Account", "Configure")">Account Settings</a></li>
}

<div data-bind="controller: 'Controllers/Configure/Account'">
	<form class="form-horizontal" method="post">

		<input type="hidden" class="form-control" asp-for="Id" readonly />
		<div class="form-group">
			<label class="col-sm-2 control-label">Username</label>
			<div class="col-sm-6">
				<input type="text" class="form-control" asp-for="UserName" readonly />
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">First</label>
			<div class="col-sm-6"><input placeholder="John" class="form-control" asp-for="FirstName" readonly></div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">Last</label>
			<div class="col-sm-6"><input placeholder="Doe" class="form-control" asp-for="LastName" readonly></div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">Email</label>
			<div class="col-sm-6">
				<input type="email" placeholder="Your email address" class="form-control" asp-for="Email" readonly>
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">Nickname</label>
			<div class="col-sm-6"><input placeholder="jdoe" class="form-control" asp-for="NickName"></div>
		</div>
        <div class="form-group">
            <label class="col-sm-2 control-label">Avatar</label>
            <div class="col-sm-6">            
                @await Component.InvokeAsync("AvatarList")
            </div>
        </div>
        
		<div class="form-group">
			<label class="col-sm-2 control-label">Location</label>
			<div class="col-sm-6">
				<select class="form-control m-b" name="location" asp-for="Location" asp-items="@(new SelectList(BuddhaDataContext.Location, "Id", "Title"))"></select>
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">Tribe</label>
			<div class="col-sm-6">
				<select class="form-control m-b" name="tribe" asp-for="Tribe" asp-items="@(new SelectList(BuddhaDataContext.Tribe, "Id", "Title"))"></select>
			</div>
		</div>
		<div class="form-group">
			<label class="col-sm-2 control-label">User Level</label>
			<div class="col-sm-6">
				<select class="form-control m-b" name="userLevel" asp-for="Level" asp-items="@(new SelectList(BuddhaDataContext.UserLevel, "Id", "Title"))"></select>
			</div>
		</div>
		<div class="form-group" id="dateJoined">
			<label class="col-sm-2 control-label">Join Date</label>
			<div class="col-sm-6">
				<div class='input-group date' data-bind="datepicker: {}">
					<input type='text' class="form-control" />
					<span class="input-group-addon">
						<span class="glyphicon glyphicon-calendar"></span>
					</span>
				</div>
			</div>
		</div>
		<div class="hr-line-dashed"></div>
		<div asp-validation-summary="All"></div>
		<div class="form-group">
			<div class="col-lg-offset-6 col-sm-2 text-right">
				<button class="btn btn-primary btn-success btn-lg" type="submit">Update</button>
			</div>
		</div>
	</form>
</div>

@section ExtraTabs
{
	<li class="active"><a href="@Url.Action("Team", "Configure")">Team Building</a></li>
	<li><a href="@Url.Action("Members", "Configure")">Members</a></li>
}

<div data-bind="controller: 'Configure/Team'">
	<div data-bind="foreach: Items">
		<form class="form-horizontal" data-bind="submit: function () { $parent.Submit($data); return false; }">

			<input type="hidden" data-bind="value: Id" />

			<div class="form-group">
				<label class="col-sm-2 control-label">Team Name</label>
				<div class="col-sm-6">
					<input type="text" placeholder="" class="form-control" data-bind="value: Name" />
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-2 control-label">Cycle</label>
				<div class="col-sm-6">
					<select class="form-control" data-bind="options: CycleOptions, optionsText: 'Title', value: Cycle, optionsCaption: '[Select an item]'"></select>
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-2 control-label">Current Cycle</label>
				<div class="col-sm-6">
					<div class="input-group date" data-bind="datepicker: { }">
						<input type="date" class="form-control" data-bind="value: CurrentCycle" />
						<span class="input-group-addon">
							<span class="glyphicon glyphicon-calendar"></span>
						</span>
					</div>
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-2 control-label">Next Cycle</label>
				<div class="col-sm-6">
					<div class="input-group date" data-bind="datepicker: {}">
						<input type="date" class="form-control" data-bind="value: NextCycle" />
						<span class="input-group-addon">
							<span class="glyphicon glyphicon-calendar"></span>
						</span>
					</div>
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-2 control-label">Close Entry in Days</label>
				<div class="col-sm-6">
					<select class="form-control" data-bind="options: CloseEntryOptions, optionsText: 'Title', value: CloseEntryDays, optionsCaption: '[Select an item]'"></select>
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-2 control-label"></label>
				<div class="col-sm-6">
					<div class="checkbox">
						<input type="checkbox" value="" id="CopyReviews_CheckBox" data-bind="value: UsePreviousReview" />
						<label for="CopyReviews_CheckBox">Use previous last review opening next cycle</label>
					</div>
				</div>
			</div>

			<div class="form-group">
				<label class="col-sm-2 control-label">Lead</label>
				<div class="col-sm-6">
					<input class="form-control" placeholder="Select a Team Lead..." type="text" data-bind="typeahead: { source: LeadOptions }, value: Lead, items: 3" />
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label">Director</label>
				<div class="col-sm-6">
					<input class="form-control" placeholder="Select a Director..." type="text" data-bind="typeahead: { source: DirectorOptions }, value: Director, items: 3" />
				</div>
			</div>
			<div class="form-group">
				<label class="col-sm-2 control-label">Vice President</label>
				<div class="col-sm-6">
					<input class="form-control" placeholder="Select a Vice President..." type="text" data-bind="typeahead: { source: VicePresidentOptions }, value: VicePresident, items: 3" />
				</div>
			</div>

			<div class="form-group">
				<div class="col-lg-offset-6 col-sm-2 text-right">
					<button class="btn btn-primary btn-success btn-lg" type="submit">Update</button>
				</div>
			</div>
		</form>
	</div>
</div>